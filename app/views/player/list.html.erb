<!-- player/list -->
<% content_for :head do %>
<%= csrf_meta_tag %>
<%= javascript_include_tag params[:controller] %>
<% end %>

<div align="left">

	<table border="0" width="95%" cellpadding="5">
		<tr>
			<td width="50%"> <%= form_tag('/game', :id => 'players_form') do %>
			<% if @players.blank? %>
			<p id="playersinline">
				Currently, there are no players. Please wait...
			</p> <% else %>
			<p id="playersinline">
				Lobby:
			</p> <% end %>
			<%= select_tag "playersids", options_from_collection_for_select(@players, "id", "name"),
			:multiple => true, :size => 10 %>
			<br />
			<br />
			<%= submit_tag("Invite player(s) to a new game", :name => 'commit', :class => 'stylebutton') %>
			&nbsp; - OR -
			<%= button_tag("Wait for an invitation...", :type => 'button', :class => 'stylebutton', :onClick => 'window.location="/player/waiting"') %>
			<% end %> </td>
		</tr>
	</table>
</div>
