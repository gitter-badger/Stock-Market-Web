<!-- player/list -->
<% content_for :head do %>
<%= csrf_meta_tag %>
<%= javascript_include_tag params[:controller] %>
<% end %>

<div align="left">

	<table border="0" width="95%" cellpadding="5">
		<tr>
			<td width="50%"> <%= form_tag('/player/invitations', :method => :post)  do %>
			<% if @players.blank? %>
			<p id="playersinline">
				Currently, there are no players. Please wait...
			</p> <% else %>
			<p id="playersinline">
				Lobby:
			</p> <% end %>
			<%= select_tag "playersids", options_from_collection_for_select(@players, "id", "name"), :multiple => true, :size => 10 %>
			<br />
			<br />
			<!-- button_to NON VA BENE! -- perche genera un'altra form -->
			<%= button_tag("Wait for an invitation...", :type => 'button', :class => 'stylebutton', :onClick => 'window.location="invitations/waiting"') %>
			&nbsp; - OR -
			<%= submit_tag('Invite player(s) to a new game', :name => 'commit', :class => 'stylebutton') %>
			<% end %> </td>
		</tr>
	</table>
</div>
