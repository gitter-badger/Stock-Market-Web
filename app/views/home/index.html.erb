<div align="center">

    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <% if session[:playername].nil? %>
    	<%= form_tag('/player', :method => :post) do %>
        	Please insert your name:  
        	<%= text_field_tag 'playername', nil, :placeholder => 'Your name here...' %>
        	<br />
        	<% if not @error.blank? %>
        	<div id='errorspace'><%= @error %></div>
        	<% end %>
        	<br />
        	<%= submit_tag("Join games room") %>	
        	<p>
        	    <a href="/home/startgame">Fast game setup [DEBUG]</a>
        	</p>
    	<% end %>
    <% else %>
        <a href="/titles/list">Proceed to game, <%= session[:playername] %></a> - or - 
        <a href="/home/logout">logout</a>
    <% end %>
	<p>&nbsp;</p>
	<p>&nbsp;</p>

</div>
