<% content_for :head do %>
<%= csrf_meta_tag %>
<%= javascript_include_tag 'invite_accept' %>
<% end %>

<table border="0" width="95%" cellpadding="5">
    <tr>
        <td>
        <table width="90%" bgcolor="#FF9999">
            <tr>
                <td><p>
                    Waiting for player(s) to accept your invitations...</p>
                </td>
            </tr>
            <tr>
                <td>
                    <form action="">
                    <table border="1">
                        <thead></thead>
                            <th>Invited</th>
                            <th>Accepted</th>
                        </thead>
                        <tbody>
                            <% @invitations.each do |invitation| %>
                            <tr>
                                <td><%= invitation.invited %></td>
                                <td><%= check_box_tag 'accepted', 'yes', invitation.accepted %></td>
                            </tr>
                            <% end %>
                            <tr>
                               <td colspan="2">
                                   <div id="message">&nbsp;</div>
                               </td> 
                            </tr>
                        </tbody>
                    </table>
                    </form>
                </td>
            </tr>
            <tr><td>&nbsp;</td></tr>
            <tr>
                <td>
                    <%= link_to "Back to lobby", { :action => 'list' }, :class => "stylebutton" %>
                </td>
            </tr>
        </table>
        </td>
    </tr>
</table>